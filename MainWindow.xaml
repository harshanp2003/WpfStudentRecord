<Window x:Class="WpfStudentRecord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStudentRecord"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label>Enter the Student id</Label>
                <TextBox Name="id" Width="100" Background="AliceBlue" Margin="30,4,4,4"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Label>Enter the Student Name</Label>
                <TextBox Name="student_name" Width="100" Background="AliceBlue" Margin="8" ></TextBox>
            </StackPanel>
            <Button Background="GreenYellow" Margin="20" Click="Button_Click" Width="100">Add a Student</Button>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label>Enter the Student id</Label>
                <TextBox Name="sid" Width="100" Background="AliceBlue" Margin="8" Height="Auto"></TextBox>

            </StackPanel>
            <Button Background="Red" Margin="20" Click="Remove_Student" Width="100">Remove Student</Button>

        </StackPanel>



        <StackPanel Orientation="Vertical">
         
            <TextBlock Name="Details" Background="AliceBlue" Margin="220" Width="440" Height="Auto">

            </TextBlock>
        </StackPanel>
    </Grid>
</Window>

